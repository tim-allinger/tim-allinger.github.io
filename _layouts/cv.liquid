<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {{ page.title }}
      {% if page.cv_pdf %}
        <a
          href="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url}}"
          target="_blank"
          rel="noopener noreferrer"
          class="float-right"
        >
          <i class="fa-solid fa-file-pdf"></i>
        </a>
      {% endif %}
    </h1>
    {% if page.description %}
      <p class="post-description">{{ page.description }}</p>
    {% endif %}
  </header>

  <article>
    {% if page.cv_pdf %}
      <div style="margin-top: 1.5rem;">
        <iframe src="{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}#view=FitH"
                width="100%"
                height="900px"
                style="border: none;">
        </iframe>
      </div>
    {% endif %}
  </article>
</div>
